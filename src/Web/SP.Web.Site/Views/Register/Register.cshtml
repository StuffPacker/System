@using Microsoft.AspNetCore.Mvc.TagHelpers
@model SP.Web.Site.Features.Account.Register.RegisterViewModel
@{
    Layout = "_Layout";
}
<header class="masthead">
    <div class="container h-100">
        <div class="row h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-10 align-self-end">
                <h1 class="text-uppercase text-white font-weight-bold">Register to Stuffpacker</h1>
                <hr class="divider my-4">
            </div>
            <div class="col-lg-8 align-self-baseline">
                <form method="post">
                    <p class="text-white-75 font-weight-light mb-5">
                        <div class="container">
                            <div class="row">
                              
                                <div class="col-lg-4">
                                    <b>
                                        Email
                                    </b>
                                    <input asp-for="Email"/>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row" style="padding-top:5px; padding-bottom:5px;">
                               
                                <div class="col-lg-4">
                                    <b>
                                        Password
                                    </b>
                                    <input asp-for="Password"/>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row" style="padding-top:5px; padding-bottom:5px;">
                              
                                <div class="col-lg-4">
                                    <b>
                                        ConfirmPassword
                                    </b>
                                    <input asp-for="ConfirmPassword"/>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <br/>
                        <a class="btn btn-dark btn-xl" href="/">Cancel</a>
                        <button class="btn btn-primary btn-xl js-scroll-trigger" type="submit">Register</button>

                    </p>

                </form>
            </div>

        </div>
    </div>
</header>