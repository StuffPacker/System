@using Microsoft.AspNetCore.Mvc.TagHelpers
@model SP.Web.Business.Feature.Account.Login.LoginViewModel

@{
    Layout = "_Layout";
}

<header class="masthead">
    <div class="container h-100">
        <div class="row h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-10 align-self-end">
                <h1 class="text-uppercase text-white font-weight-bold">Login to Stuffpacker</h1>
                <hr class="divider my-4">
            </div>
            <div class="col-lg-10 align-self-end">
                <form id="account" method="post">
                    <p class="text-white-75 font-weight-light mb-5">
                        <table style="align-content: center; width: 100%">
                            <tr>
                                <td style="width: 50%; text-align: right; padding-right: 1%"><b>Email</b></td>
                                <td style="text-align: left"><input class="input-group-text" asp-for="Email"/><span asp-validation-for="Email" class="text-danger"></span></td>
                            </tr>
                            <tr>
                                <td style="width: 50%; text-align: right; padding-right: 1%"><b>Password</b></td>
                                <td style="text-align: left"><input asp-for="Password"/><span asp-validation-for="Password" class="text-danger"></span></td>
                            </tr>
                            <tr>
                                <td style="width: 50%; text-align: right; padding-right: 1%"><b>Remember Me</b></td>
                                <td style="text-align: left"><input asp-for="RememberMe"/></td>
                            </tr>
                        </table>

                        <div asp-validation-summary="All" class="text-danger"></div>
                        <a href="/account/register">Register</a><br/>
                        <a href="/account/ForgotPassword">Forgot your password?</a>
                        <br/><br/>
                        <a class="btn btn-dark btn-xl" href="/">Cancel</a>
                        <button class="btn btn-primary btn-xl js-scroll-trigger" type="submit">Login</button>

                    </p>
                </form>
            </div>
        </div>
    </div>
</header>